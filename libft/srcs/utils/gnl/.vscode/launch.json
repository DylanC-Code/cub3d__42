{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/get_next_line", // ‚Üê ou ton binaire
            "args": [
                // "gnlTester/files/multiple_line_no_nl"
                "~/francinette/tests/get_next_line/fsoares/giant_line.txt"
                // "gnlTester/files/alternate_line_nl_with_nl"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
